# Zepplin Registry Configuration
# Copy this file to .env and adjust values for your deployment

# Domain Configuration
ZEPPLIN_DOMAIN=zig.cktech.org
ZEPPLIN_REGISTRY_NAME=CKTech Zig Registry

# Server Configuration
ZEPPLIN_LOG_LEVEL=info
ZEPPLIN_MAX_PACKAGE_SIZE=50MB

# Feature Flags
ZEPPLIN_ENABLE_WASM=true
ZEPPLIN_ENABLE_ZIGISTRY_INTEGRATION=true
ZEPPLIN_ENABLE_GITHUB_AUTH=false

# Database Configuration
DATABASE_URL=sqlite:///app/data/zepplin.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_RETENTION_DAYS=7

# Security Configuration
SECRET_KEY=change-this-in-production-please
JWT_EXPIRES_IN=7d
RATE_LIMIT_ANONYMOUS=60
RATE_LIMIT_AUTHENTICATED=5000

# External Services (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
DISCORD_WEBHOOK_URL=
SMTP_SERVER=
SMTP_USER=
SMTP_PASSWORD=

# Docker Registry Configuration (for docker.cktechx.io)
DOCKER_REGISTRY=docker.cktechx.io
DOCKER_IMAGE_TAG=latest

# Monitoring & Analytics
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=false